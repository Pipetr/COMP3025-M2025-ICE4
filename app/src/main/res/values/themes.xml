<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Base.Theme.ICE4" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here -->
    </style>

    <!-- Public app theme -->
    <style name="Theme.ICE4" parent="Base.Theme.ICE4" />

    <style name="CalculatorButtonStyle" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_layout_height</item>
        <item name="android:layout_margin">@dimen/button_margin</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/fa_solid_900</item>
        <item name="android:padding">@dimen/zero</item>
        <item name="android:textSize">@dimen/button_text_size</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
    </style>

    <!-- TODO:
    Add here the style, inheriting from original -->

    <style name="CalculatorButtonStyleLand" parent="CalculatorButtonStyle">
        <item name="android:layout_height">@dimen/button_layout_land_height</item>
        <item name="android:textSize">@dimen/button_text_land_size</item>
    </style>

    <style name="NumbersButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/genButtonColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="NumbersButtonStyleLand" parent="CalculatorButtonStyleLand">
        <item name="android:backgroundTint">@color/genButtonColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="OperatorsButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/blueFunctionButton</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="OperatorsButtonStyleLand" parent="CalculatorButtonStyleLand">
        <item name="android:backgroundTint">@color/blueFunctionButton</item>
        <item name="android:textColor">@color/brown</item>
    </style>

    <style name="ModifiersButtonStyle" parent="CalculatorButtonStyle">
        <item name="android:backgroundTint">@color/specialButtonColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ModifiersButtonStyleLand" parent="CalculatorButtonStyleLand">
        <item name="android:backgroundTint">@color/specialButtonColor</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EqualsButtonStyle" parent="OperatorsButtonStyle">
        <item name="android:backgroundTint">@color/equalsButtonColor</item>
    </style>

    <style name="EqualsButtonStyleLand" parent="OperatorsButtonStyleLand">
        <item name="android:backgroundTint">@color/equalsButtonColor</item>
    </style>
</resources>